<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Downloaded songs</title>

    <link rel="stylesheet" href="public/styles/style.css">
    <link rel="stylesheet" href="public/styles/styles.css">
</head>

<body class='p-4 bg-gray-800'>

    <%- include('nav') %>

        <div class='flex flex-col gap-4 mx-auto mt-16 max-w-screen-md'>
            <% songs.forEach(function(songInfo) { %>
                <div class='flex flex-row w-full gap-4 p-2 rounded bg-gray-700'>
                    <img src="https://lh3.googleusercontent.com/<%= songInfo.thumbId %>=w60-h60-l90-rj" alt="song logo"
                        loading="lazy">
                    <div class='text-white w-1/2'>
                        <h4 class="overflow-hidden overflow-ellipsis whitespace-nowrap h-6">
                            <%= songInfo.title %>
                        </h4>
                        <p><a href="https://www.youtube.com/channel/<%= songInfo.authorId %>">
                                <%= songInfo.authorName %>
                            </a></p>
                    </div>
                    <div id='button-commands' class='ml-auto my-auto'>
                        <a href='/listen/<%= songInfo.id %>'
                            class='bg-green-400 rounded-full h-12 w-12 flex items-center justify-center saveToServerBtn'
                            vidid='<%= songInfo.videoId %>' style='aspect-ratio: 1 / 1;'>
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                                class="bi bi-soundwave" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M8.5 2a.5.5 0 0 1 .5.5v11a.5.5 0 0 1-1 0v-11a.5.5 0 0 1 .5-.5zm-2 2a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zm4 0a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zm-6 1.5A.5.5 0 0 1 5 6v4a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm8 0a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm-10 1A.5.5 0 0 1 3 7v2a.5.5 0 0 1-1 0V7a.5.5 0 0 1 .5-.5zm12 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0V7a.5.5 0 0 1 .5-.5z" />
                            </svg>
                        </a>
                    </div>
                </div>
                <% }) %>
        </div>


        <script>
            document.querySelector('#searchForm').addEventListener('submit', e => {
                e.preventDefault();
                window.location = `search?q=${e.currentTarget.searchBox.value}&c=${e.currentTarget.category.value}`
            })
        </script>
</body>

</html>